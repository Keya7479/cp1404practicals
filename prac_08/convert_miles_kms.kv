BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        # autos as horizontal orientation
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: "Convert miles to km"
        on_press: app.handle_conversion(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (0, 0, 1, 1)
        text: app.output_text